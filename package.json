{
	"name": "ze-code-challenge",
	"author": "Matheus Torres <matheustrres.rj@gmail.com>",
	"version": "1.0.0",
	"private": true,
	"main": "./dist/server.js",
	"license": "MIT",
	"packageManager": "pnpm@9.1.1",
	"engines": {
		"node": "20.x",
		"pnpm": ">=9.1.1"
	},
	"scripts": {
		"build": "swc ./src --out-dir ./dist --strip-leading-paths",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"lint": "eslint \"{src,tests}/**/*.ts\" --fix",
		"precommit": "lint-staged",
		"prepush": "test",
		"prestart": "rm -rf dist && pnpm build",
		"prepare": "husky install",
		"db:seed": "node --env-file=.env ./dist/infra/drivers/mongo/seed.js",
		"start": "node --env-file=.env .",
		"start:dev": "tsx --watch --env-file=.env.dev src/server.ts",
		"test": "glob -c \"node --import tsx --no-warnings --test\" \"./tests/**/*.{spec,test}.ts\""
	},
	"dependencies": {
		"@brazilian-utils/brazilian-utils": "1.0.0-rc.12",
		"cors": "^2.8.5",
		"express": "^4.19.2",
		"helmet": "^7.1.0",
		"module-alias": "^2.2.3",
		"mongoose": "^8.4.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@swc/cli": "^0.3.12",
		"@swc/core": "^1.4.12",
		"@swc/helpers": "^0.5.8",
		"@tsconfig/node-lts": "^20.1.3",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/module-alias": "^2.0.4",
		"@types/node": "20.11.1",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import-helpers": "^1.3.1",
		"eslint-plugin-prettier": "^5.1.3",
		"glob": "^10.3.10",
		"husky": "^8.0.0",
		"lint-staged": "^15.2.2",
		"tsx": "^4.7.1",
		"typescript": "^5.4.2"
	}
}